@model IEnumerable<Estampas.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Mis Pedidos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Fecha
            </th>
            <th>
                Comentario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.PedidoId">Agregar Comentario</a> |
            </td>
        </tr>
}
    </tbody>
</table>
